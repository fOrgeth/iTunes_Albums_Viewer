<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/tragic_kingdom"
            card_view:layout_constraintBottom_toTopOf="@id/layout_item_title"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintTop_toBottomOf="@id/thumbnail">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="@string/txt_pre_title"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xsmall"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:textSize="14dp"
                tools:text="TITLE"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_track_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="@string/txt_pre_track_count"/>

            <TextView
                android:id="@+id/txt_track_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xsmall"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="12dp"
                tools:text="Track count: 12"/>

            <ImageView
                android:id="@+id/dots"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_gravity="end"/>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
