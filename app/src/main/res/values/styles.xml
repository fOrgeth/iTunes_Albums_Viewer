<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">@dimen/text_size_pre_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="TextViewPreTitle">
        <item name="android:textSize">@dimen/text_size_pre_title</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="TextViewArtist">
        <item name="android:textSize">@dimen/text_size_artist</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="TextViewPreArtist">
        <item name="android:textSize">@dimen/text_size_pre_artist</item>
        <item name="android:alpha">0.5</item>
    </style>


</resources>
